@model IECHClinic.Models.RolVM

@{
    Layout = null;
}
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Administrativo</th>
                <th>Operativo</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.lGridRol != null)
            {
                foreach (var item in Model.lGridRol)
                {
                    <tr>
                        <td style="font-size:12px">@item.intRol</td>
                        <td style="font-size:12px">@item.strNombre</td>
                        <td style="font-size:12px">
                            @{
                                string Administrativo = (@item.isAdministrativo == true ? "<span title='Es Administrativo'><i class='fas fa-check' style='color: green;'></i></span>" : "<span></span>");
                            }
                            @Html.Raw(@Administrativo)
                        </td>
                        <td style="font-size:12px">
                            @{
                                string Operativo = (@item.isOperativo == true ? "<span title='Es Operativo'><i class='fas fa-check' style='color: green;'></i></span>" : "<span></span>");
                            }
                            @Html.Raw(@Operativo)
                        </td>

                        <td style="font-size:12px">
                            @{
                                string Elementoi = (@item.Estado == true ? "<span title='Activo'><i class='fas fa-check' style='color: green;'></i></span>" : "<span title='Inactivo'><i class='fas fa-times' style='color: red;'></i></span>");
                            }
                            @Html.Raw(@Elementoi)
                        </td>
                        <td style="font-size:12px">
                            @if ((item.intRol == 1) || (item.intRol == 2))
                            {
                                <span title="OK"></span>
                            }
                            else
                            {
                                <span title="Editar" class='urlEditar' data='@item.intRol'><i class='fas fa-edit' style='color: #5d9cec;'></i></span>
                                <span title="Eliminar" class='urlEliminar' data='@item.intRol'><i class='fas fa-trash' style='color: red;'></i></span>

                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>