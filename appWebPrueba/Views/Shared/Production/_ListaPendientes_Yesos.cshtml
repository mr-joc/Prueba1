@model appWebPrueba.Models.ProductionVM

@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <div class="card-header text-white bg-dark mb-3">
            <a class="float-right" href="#" data-tool="panel-refresh" data-toggle="tooltip" title="Actualizar">
                <em class="fa icon-reload"></em>
            </a>Pendientes de Yesos &nbsp;(<span id="spTotal">XXX</span>)
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <tbody>
                    @for (int ii = 0; ii <= Model.lPendientes.Count() - 1; ii++)
                    {
                        <tr>
                            <td>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <h4 class="m-0">
                                            @Model.lPendientes[ii].JobNum
                                            <span class="badge @Model.lPendientes[ii].BadgeStyle_Antiguedad">@Model.lPendientes[ii].BadgeStatus_Antiguedad</span>
                                            <span class="badge @Model.lPendientes[ii].BadgeStyle_Entrega">@Model.lPendientes[ii].BadgeStatus_Entrega</span>
                                        </h4>
                                    </div>
                                    &nbsp;
                                    @*<div class="col-lg-6">
                                            <div>
                                                <div class="btn btn-info btn-sm" id="@Model.lPendientes[ii].JobNum" onclick="fnConsultar('@Model.lPendientes[ii].JobNum',this.id)">
                                                    Ensamblar
                                                </div>
                                                <div  class="btn btn-success btn-sm" id="ri-@Model.lPendientes[ii].JobNum" onclick="reimprimir(this.id)">
                                                    Reimprimir
                                                </div>
                                            </div>
                                    </div>*@
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <small class="text-muted">
                                            @Model.lPendientes[ii].JobPartNum.Replace("/", " /").Replace(";", " ")
                                        </small>
                                    </div>
                                    <div class="col-lg-12">
                                        <small class="text-muted">
                                            @Model.lPendientes[ii].JobPartDesc.Replace("/", " /").Replace(";", " ")
                                        </small>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">

    var ttottal=@Model.lPendientes.Count();
    document.getElementById("spTotal").innerHTML = @Model.lPendientes.Count();
    document.getElementById("sp_CerradasCompletas___02").innerHTML = @Model.lPendientes.Count();

    //console.log("document.getElementById(.sp_CerradasCompletas___02.).innerHTML" + ttottal);
</script>
