@using appWebPrueba.DataAccess
@model appWebPrueba.Models.TipoTrabajoVM


<div class="card-body">
    @Html.HiddenFor(x => Model.Estado) 

    @Html.HiddenFor(x => Model.intTipoTrabajoID)
    <div class="form-group row">
        <div class="col-lg-4">
            @Html.LabelFor(y => y.intTipoTrabajoID, new { @class = "label-form" })
            <div class="input-group">
                @Html.TextBoxFor(y => y.intTipoTrabajoID, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-4">
            @Html.LabelFor(x => x.strNombre, new { @class = "label-form" })
            <div class="input-group">
                @Html.TextBoxFor(x => x.strNombre, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(x => x.strNombre, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-4">
            @Html.LabelFor(x => x.strNombreCorto, new { @class = "label-form" })
            <div class="input-group">
                @Html.TextBoxFor(x => x.strNombreCorto, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(x => x.strNombreCorto, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-4">
            @Html.LabelFor(x => x.intMaterial, new { @class = "label-form" })
            <select data-plugin-selectTwo data-minimum-results-for-search="Infinity"
                    class="form-control populate mb-3"
                    name="@Html.NameFor(x => x.Material.MaterialID)"
                    id="cboMaterial_E">

                @if (Model.Material.MaterialID != null)
                {
                    <option value="@Model.Material.MaterialID">@Model.Material.NombreMaterial</option>
                }
                else
                {
                    <option value="">Seleccione...</option>
                }
                @foreach (appWebPrueba.Models.Material material in Model.lMaterial)
                {
                    <option value="@material.MaterialID">
                        @material.NombreMaterial
                    </option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-4">
            @Html.LabelFor(x => x.dblPrecio, new { @class = "label-form" })
            <div class="input-group">
                @Html.TextBoxFor(x => x.dblPrecio, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(x => x.dblPrecio, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-4">
            @Html.LabelFor(x => x.dblPrecioUrgente, new { @class = "label-form" })
            <div class="input-group">
                @Html.TextBoxFor(x => x.dblPrecioUrgente, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(x => x.dblPrecioUrgente, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-4">
            @Html.LabelFor(y => y.Estado, new { @class = "label-form" })
            <div class="input-group">
                <span class="input-group-prepend">
                    <span class="input-group-text">
                        <i>
                            <input type="radio" value="" name="radioActivoE" id="radioActivoE"
                                   onclick="radioActivoE()">
                        </i>
                    </span>
                </span>
                <input value="Activo" class="form-control" type="text" readonly>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-10">
            <div class="btn btn-warning float-right text-bold text-gray-darker" id="AgregaOperaciones-btn">
                Configuración&nbsp;&nbsp;<em class="fa-sm mr-2 fas fa-cogs"></em>
            </div>
            <div class="btn btn-dark float-right text-bold" id="OcultaOperaciones-btn">
                Ocultar Configuración&nbsp;&nbsp;<em class="fa-sm mr-2 fas fa-cogs"></em>
            </div>
            @*<div class="btn btn-warning float-right text-bold text-gray-darker" id="AgregaOperaciones2-btn">
                Configuración_2&nbsp;&nbsp;<em class="fa-sm mr-2 fas fa-cogs"></em>
            </div>*@
        </div>
        <div class="col-lg-2">
            <div class="btn btn-dark float-right" id="GuardaEditTipoTrabajo-btn">
                Actualizar
            </div>
        </div>  
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        var estado = $(@Html.IdFor(y => Model.Estado)).val(); 

        if (estado == 'False') { $("#radioActivoE").prop('checked', false); $("#radioActivoE").prop('value', 0); } else { $("#radioActivoE").attr('checked', true); $("#radioActivoE").prop('value', 1); }
        

    });
</script>

